@{
    ViewData["Title"] = "Editing";

    Layout = "~/Views/Shared/_Layout_Admin.cshtml";

}
@model Final_Project.ViewModels.UsersDetailsViewModel


<div class="container justify-content-center shadow p-4 w-50">
    <h2 class="text-dark d-flex justify-content-center text-center lead p-4 " style=" background-color:#F5F5F5; border-radius:7px">Edit User Info </h2>

    <div class=" d-flex justify-content-center pt-5">
        <form method="post" enctype="multipart/form-data">
                <div class="d-flex justify-content-between">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label ">User Name</label>
                        <input asp-for="Name" class="form-control p-2" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label asp-for="Email" class="control-label text-black">Email</label>
                        <input asp-for="Email" type="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-2">

                    <div class="form-group  ">
                        <label asp-for="Address" class="control-label text-black">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group  ms-2">
                        <label asp-for="Phone" class="control-label text-black">Phone</label>
                        <input asp-for="Phone" type="Phone" class="form-control " />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group  ">
                    <label for="formFile" asp-for="Photo" class="control-label">Photo:</label>
                    <br />
                    @if (Model.Photo != null)
                    {
                        <td>
                            <img src="/images/@Model.Photo" width="100px">
                        </td>
                    }
                    <div class="custom-file mt-2">
                        <input type="file" name="imageFile" class="custom-file-input p-2" id="formFile" accept="image/*" />
                        <label class="custom-file-label" for="formFile">Choose file</label>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Photo))
                    {
                    }
                </div>
                <div class="form-group  ">
                <label asp-for="Role" class="control-label text-black">Change The Role </label>
                    <select asp-for="Role" class="form-control p-2" asp-items="Model.RoleOptions">
                        <option value="">Are you an Author or a Client ? </option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>

                </div>

                <div class=" d-flex justify-content-center">
                    <button class="btn btn-block btn-lg text-center mt-4 w-50" style="background-color: #f5414d;" type="submit"><span style="color: white;">Add</span></button>

                </div>
                </form>
            </div>
        </div>


    </div>
</div>
<script>
    // Get the file input element
    const fileInput = document.getElementById('formFile');

    // Add an event listener for the 'change' event
    fileInput.addEventListener('change', function () {
        // Get the name of the selected file
        const fileName = fileInput.files[0].name;

        // Update the label text with the file name
        const label = document.querySelector('.custom-file-label');
        label.textContent = fileName;

        // Update the input group text with the file name
        const selectedFileName = document.querySelector('.selected-file-name');
        selectedFileName.textContent = fileName;
    });
</script>
@section scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
