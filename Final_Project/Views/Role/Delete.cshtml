@{
    ViewData["Title"] = "Delete Role";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";


}
@model RoleViewModel




   
<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow mt-4 p-4 w-50">
        <h1>Delete Role</h1>

        <h4>Are you sure you want to delete this role?</h4>
        <p>Role Name: @Model.RoleName</p>
        <hr />

        <form asp-action="Delete">
            <input type="hidden" asp-for="RoleId" />

            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index")">Cancel</a>
        </form>

        <a href="@Url.Action("Index")">Back to List</a>
    </div>
</div>