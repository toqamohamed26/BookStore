@using Microsoft.AspNetCore.Identity;
@model List<IdentityRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";

}
<a href="@Url.Action("New")" class="btn btn-primary">Create New Role</a>
<h1>Roles</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th class="table-active">
                Role Name
            </th>
            <th class="table-active">
                Actions
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-outline-warning" >Edit</a> |
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="btn btn-outline-danger" onsubmit="return confirm('Are you sure you want to delete this role?');">
                        <button type="submit" class="btn btn-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>



