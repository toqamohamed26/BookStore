@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";


}
@model RoleViewModel


<h1 class="lead p-5 fs-2">  </h1>
<div class="container justify-content-center shadow p-4 w-50">
    <h2 class="text-dark d-flex justify-content-center text-center lead p-4 " style=" background-color:#F5F5F5; border-radius:7px">Update Role Name</h2>

    <div class=" container ">
        <div>
            <form asp-action="Edit">
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label ">Role Name</label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
