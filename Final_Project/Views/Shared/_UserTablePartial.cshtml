@model IEnumerable<Final_Project.ViewModels.UsersDetailsViewModel>

<style>
    th{
        letter-spacing:1px;
    }
</style>    
<table class="table table-hover">
    <thead class="p-2 lead">
        <tr>
            <th scope="col" class="fw-normal text-capitalize">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col" class="fw-normal text-capitalize">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th scope="col" class="fw-normal text-capitalize">
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th scope="col" class="fw-normal text-capitalize">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th scope="col" class="fw-normal text-capitalize">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th scope="col" class="fw-normal text-capitalize">
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th scope="col" class="fw-normal text-capitalize">
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <img src="/images/@item.Photo" width="50px">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <button class="btn btn-danger">
                        @Html.DisplayFor(modelItem => item.Role)

                    </button>
                </td>
                <td class="text-center">
                    <a asp-action="UpdateUser" asp-controller="User" asp-route-id="@item.id" class="text-success text-decoration-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>

                    <a asp-action="Delete" asp-controller="User" asp-route-id="@item.id" class="text-danger ps-2 text-decoration-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-archive" viewBox="0 0 16 16">
                            <path d="M0 2a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1v7.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 1 12.5V5a1 1 0 0 1-1-1V2zm2 3v7.5A1.5 1.5 0 0 0 3.5 14h9a1.5 1.5 0 0 0 1.5-1.5V5H2zm13-3H1v2h14V2zM5 7.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>