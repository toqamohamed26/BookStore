				</div>
				<nav id="nav-menu-container pt-2">
					<ul class="nav-menu">
						<li class="menu-active"><a asp-action="Index" asp-controller="Home">Home</a></li>
					
						@if (role == "User")
						{
							<li><a asp-action="DisplayBooks" asp-controller="EnterUser">Books</a></li>

						}

						@if (role == "Author")
						{
							<li><a asp-action="getBooksAuthor" asp-controller="Author">My Books</a></li>
						}

						@if (user?.UserName == null)
						{
							<li class="mean-last"> <a asp-action="LogIn" asp-controller="Home">LogIn</a> </li>
							<li class="mean-last"> <a asp-action="Register" asp-controller="Home">Register</a> </li>
						}
						else
						{
							<li class="mean-last "> <a asp-action="Logout" asp-controller="Home">Logout</a> </li>

						}
						@if (role == "Author")
						{
							@if (user?.Photo != null)
							{
								<li style="padding-left:150px">
									<a asp-action="Profile" asp-controller="Author" asp-route-id=@user.Id>  <img class="rounded-circle" style="height:40px; width:40px;" src="/images/@usermanager.GetUserAsync(User).Result.Photo"></a>
								</li>
							}
							else
							{
								<li>
									<a asp-action="Profile" asp-controller="Author" asp-route-id=@user.Id>  <img class="rounded-circle" style="height:40px; width:40px;" src="/images/default.png"></a>
								</li>
							}

						}
						@if (role == "User")
						{
							@if (user?.Photo != null)
							{
								<li class="" style="padding-left:150px">
									<a asp-action="Profile" asp-controller="EnterUser" asp-route-id=@user.Id> <img class="rounded-circle" style="height:40px; width:40px;" src="/images/@usermanager.GetUserAsync(User).Result.Photo"></a>
								</li>
							}
							else
							{
								<li>
									<a asp-action="Profile" asp-controller="EnterUser" asp-route-id=@user.Id>  <img class="rounded-circle" style="height:20px" src="/images/default.png"></a>
								</li>
							}
						}
					
					</ul>
