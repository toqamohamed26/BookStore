@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> usermanager
@{
    var user = await usermanager.GetUserAsync(User);
    Layout = "~/Views/Shared/_Layout_of_us.cshtml";

}
@model Final_Project.ViewModels.AddBook

<div class="container justify-content-center shadow p-4 w-50">
    <h2 class="text-dark d-flex justify-content-center text-center lead p-4 " style=" background-color:#F5F5F5; border-radius:7px">Add New Book </h2>

    <div class=" d-flex justify-content-center pt-5">
          <form method="post" enctype="multipart/form-data">
            <div class="d-flex justify-content-between">
                <div class="form-group col-6">
                    <label asp-for="Name" class="control-label text-black">Book Name</label>
                    <input asp-for="Name" class="form-control p-2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Title" class="control-label text-black">Title</label>
                    <input asp-for="Title" type="Email" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group col-12">
                <label asp-for="Description" class="control-label text-black">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="form-group col-12">
                <label for="formFile" asp-for="Photo" class="control-label text-black ">Photo</label>
                <div class="custom-file">
                    <input type="file" name="imageFile" class="custom-file-input " id="formFile" accept="image/*" required />
                    <label class="custom-file-label" for="formFile">Choose file</label>
                </div>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <div class="form-group col-12">
                <label asp-for="Salary" class="control-label text-black">Price</label>
                <input asp-for="Salary" class="form-control"/>
                <span asp-validation-for="Salary" class="text-danger"></span>

            </div>

            <div class=" d-flex justify-content-center">
                <button class="btn text-center mt-4 " style="background-color: #f5414d;" type="submit"><span style="color: white;">Add Book</span></button>

            </div>
        </form>
    </div>

</div>

<script>
    // Get the file input element
    const fileInput = document.getElementById('formFile');

    // Add an event listener for the 'change' event
    fileInput.addEventListener('change', function () {
        // Get the name of the selected file
        const fileName = fileInput.files[0].name;

        // Update the label text with the file name
        const label = document.querySelector('.custom-file-label');
        label.textContent = fileName;

        // Update the input group text with the file name
        const selectedFileName = document.querySelector('.selected-file-name');
        selectedFileName.textContent = fileName;
    });
</script>
@section scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
