@{
    ViewData["Title"] = "Registration";

    Layout = "~/Views/Shared/_Layout_of_us.cshtml";

}
@model Final_Project.ViewModels.RegisterViewModel


<div class="container  d-flex justify-content-center mt-5">
    <div class="card shadow mt-4  p-4 w-50" style="background-color: #240046;">
        <h2 class="text-light text-center">Registeration</h2>
        <hr />

        <div class="row ">
            <div class="col-md-8 col-lg-12">
                <form asp-action="Register" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label text-light">User Name::</label>
                        <input asp-for="Name" class="form-control p-2" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5 ">
                        <label asp-for="Email" class="control-label text-light">Email:</label>
                        <input asp-for="Email" type="Email" class="form-control p-2" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5 ">
                        <label for="formFile" asp-for="Photo" class="control-label text-light">Photo:</label>
                        <div class="custom-file">
                            <input type="file" name="imageFile" class="custom-file-input p-2" id="formFile" accept="image/*" required />
                            <label class="custom-file-label" for="formFile">Choose file</label>
                        </div>
                    </div>
                    <div class="form-group mt-5 ">
                        <label asp-for="Addrss" class="control-label text-light">Addrss:</label>
                        <input asp-for="Addrss" class="form-control p-2" />
                        <span asp-validation-for="Addrss" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5 ">
                        <label asp-for="Phone" class="control-label text-light">Phone:</label>
                        <input asp-for="Phone" type="Phone" class="form-control p-2" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5 ">
                        <label asp-for="Password" class="control-label text-light">Password:</label>
                        <input asp-for="Password" type="password" class="form-control p-2" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>      
                    <div class="form-group  mt-5">
                        <label asp-for="ConfirmPassword" class="control-label text-light ">ConfirmPassword:</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control p-2" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-5">
                        <label asp-for="Role" class="control-label text-light">Role </label>
                        <select asp-for="Role" class="form-control p-2" asp-items="Model.RoleOptions">
                            <option value="">Select a Role</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>

                    </div>

                    <div class="form-group mt-5 justify-content-center  text-center  ">
                        <button class="btn btn-block btn-lg w-100" style="background-color: #573b8a;" type="submit"><span style="color: white;">Register</span></button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row text-center mt-4 justify-content-center">

            <a asp-action="logIn" asp-controller="Home" class=" btn btn-info btn-block btn-lg w-50"><span style="color: #573b8a;">Sign In</span></a>

        </div>
    </div>
</div>
<script>
    // Get the file input element
    const fileInput = document.getElementById('formFile');

    // Add an event listener for the 'change' event
    fileInput.addEventListener('change', function () {
        // Get the name of the selected file
        const fileName = fileInput.files[0].name;

        // Update the label text with the file name
        const label = document.querySelector('.custom-file-label');
        label.textContent = fileName;

        // Update the input group text with the file name
        const selectedFileName = document.querySelector('.selected-file-name');
        selectedFileName.textContent = fileName;
    });
</script>
@section scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
