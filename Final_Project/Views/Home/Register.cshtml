@{
    ViewData["Title"] = "Registration";

    Layout = "~/Views/Shared/_Layout_of_us.cshtml";

}
@model Final_Project.ViewModels.RegisterViewModel


<div class="container justify-content-center shadow p-4 w-50">
    <h2 class="text-dark d-flex justify-content-center text-center lead p-4 " style=" background-color:#F5F5F5; border-radius:7px">Join Us </h2>

    <div class=" d-flex justify-content-center pt-5">
                <form asp-action="Register" method="post" enctype="multipart/form-data">
                  <div class="d-flex justify-content-between">
                <div class="form-group col-6">
                    <label asp-for="Name" class="control-label text-black">User Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Email" class="control-label text-black">Email</label>
                    <input asp-for="Email" type="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                  </div>
            <div class="d-flex justify-content-between mt-2">

                <div class="form-group col-6">
                    <label asp-for="Address" class="control-label text-black">Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
            </div>
                <div class="form-group col-6">
                <label asp-for="Phone" class="control-label text-black">Phone</label>
                <input asp-for="Phone" type="Phone" class="form-control " />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            </div>

            <div class="d-flex justify-content-between mt-2">

                <div class="form-group col-6">
                        <label asp-for="Password" class="control-label text-black">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                <div class="form-group col-6">
                        <label asp-for="ConfirmPassword" class="control-label text-black ">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control " />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    </div>

                <div class="form-group col-12 ">
                    <label for="formFile" asp-for="Photo" class="control-label text-light">Photo:</label>
                    <div class="custom-file">
                        <input type="file" name="imageFile" class="custom-file-input p-2" id="formFile" accept="image/*" required />
                        <label class="custom-file-label" for="formFile">Choose file</label>
                    </div>
            </div>
            <div class="form-group col-12 ">
                        <label asp-for="Role" class="control-label text-black">Join As </label>
                        <select asp-for="Role" class="form-control p-2" asp-items="Model.RoleOptions">
                            <option value="">Are you an Author or a Client ? </option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>

                    </div>

            <div class=" d-flex justify-content-center">
                <button class="btn btn-block btn-lg text-center mt-4 w-50" style="background-color: #f5414d;" type="submit"><span style="color: white;">Register</span></button>

                    </div>

                </form>
            </div>
    <div class=" d-flex justify-content-center mt-2">

        <p>Already have an account ? </p>
        <a asp-action="logIn" asp-controller="Home"><span class="p-2"> Sign In </span></a>

    </div>
        </div>

       
<script>
    // Get the file input element
    const fileInput = document.getElementById('formFile');

    // Add an event listener for the 'change' event
    fileInput.addEventListener('change', function () {
        // Get the name of the selected file
        const fileName = fileInput.files[0].name;

        // Update the label text with the file name
        const label = document.querySelector('.custom-file-label');
        label.textContent = fileName;

        // Update the input group text with the file name
        const selectedFileName = document.querySelector('.selected-file-name');
        selectedFileName.textContent = fileName;
    });
</script>
@section scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
