@model Final_Project.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_of_us.cshtml";


}
<!-- Section: Design Block -->

<style>
    label{
        letter-spacing:2px;
    }
</style>
<div class="container shadow p-3 w-50">

    <h2 class="text-dark d-flex justify-content-center text-center lead p-4 " style=" background-color:#F5F5F5; border-radius:7px">Sign In</h2>
        <div class="row d-flex justify-content-center pt-5">
            <div class="col-md-8 col-lg-6">
                <form asp-action="Login" method="post">
                    <div class="form-group">
                    <label asp-for="UserName" class="control-label fs-4 text-black">Username </label>
                        <input asp-for="UserName" class="form-control p-2" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-5 ">
                        <label asp-for="Password" class="control-label fs-4 text-black">Password </label>
                        <input asp-for="Password" type="password" class="form-control p-2" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5 justify-content-center  text-center  ">
                        <button class="btn btn-block btn-lg w-100" style="background-color: #f5414d;" type="submit"><span style="color: white;">Login</span></button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row text-center mt-4 justify-content-center">

            <a asp-action="Register" asp-controller="Home" style="background-color: #F5F5F5;" class=" btn btn-light btn-block btn-lg w-25"><span style="color: #573b8a;">Register</span></a>

        </div>
    </div>


@section scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
