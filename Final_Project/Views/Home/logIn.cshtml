@model Final_Project.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_of_us.cshtml";


}
<div class="container  d-flex justify-content-center">
    <div class="card shadow mt-4  p-4 w-50" style="background-color: #240046;">
        <h2 class="text-light text-center">Sign In</h2>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="UserName" class="control-label text-light">Username:</label>
                        <input asp-for="UserName" class="form-control p-2" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-5 ">
                        <label asp-for="Password" class="control-label text-light">Password:</label>
                        <input asp-for="Password" type="password" class="form-control p-2" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5 justify-content-center  text-center  ">
                        <button class="btn btn-block btn-lg w-100" style="background-color: #573b8a;" type="submit"><span style="color: white;">Login</span></button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row text-center mt-4 justify-content-center">

            <a asp-action="Register" asp-controller="Home" class=" btn btn-light btn-block btn-lg w-25"><span style="color: #573b8a;">Register</span></a>

        </div>
    </div>
</div>

@section scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
